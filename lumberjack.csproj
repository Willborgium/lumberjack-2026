<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net9.0-windows</TargetFramework>
    <RollForward>Major</RollForward>
    <PublishReadyToRun>false</PublishReadyToRun>
    <TieredCompilation>false</TieredCompilation>
    <UseWindowsForms>true</UseWindowsForms>
    <Nullable>enable</Nullable>
  </PropertyGroup>
  <PropertyGroup>
    <ApplicationManifest>app.manifest</ApplicationManifest>
    <ApplicationIcon>Icon.ico</ApplicationIcon>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="MonoGame.Framework.WindowsDX" Version="3.8.*" />
    <!-- Content builder task disabled to avoid tooling issues in this environment; textures will be
         loaded at runtime as a fallback. Re-enable by restoring the package reference if you want
         the MGCB pipeline to run during build. -->
    <!-- <PackageReference Include="MonoGame.Content.Builder.Task" Version="3.8.*" /> -->
  </ItemGroup>
</Project>